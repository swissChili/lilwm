// Run on startup
autorun
{
	cmd		"msgbox 'Welcome to lilwm'"
	cmd		"feh --bg-fill ~/Pictures/wallpaper.jpg"
}

// tiling-related options
tile
{
	// how big the gap between windows is (0 for none)
	gap 12
}

// Key bindings
keys
{
	"alt Return"	"newterm"
	"alt q"			"quit"
	"alt w"			"closewin"
	"alt Right"		"tile right"
	"alt Left"		"tile left"
	"alt space"		"shell pickdesktop"
}

// Default applications
apps
{
	terminal	"alacritty"
}
